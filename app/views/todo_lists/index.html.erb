
<div class="row">
    <div class="col-md-10 col-md-offset-1 ">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="container-fluid">
                    <div class="col-md-2">
                         <%= link_to 'New Flight Entry', new_todo_list_path, class: "btn btn-primary" %>
                    </div>
                    <%= search_form_for @search, url: search_todo_lists_path, html: {class: "form-inline col-md-9 col-md-offset-1", method: :post} do |f|%>
                      <div class="field">
                        <div class="input-daterange">
                            <div class="col-md-4">
                                <%= f.text_field :date_gteq, class: "form-control", placeholder: "Date >= to"  %>
                            </div>
                            <div class="col-md-4 ">
                                <%= f.text_field :date_lteq, class: "form-control", placeholder: "Date <= to"  %>
                            </div>
                        </div>
                        <div class="col-md-4 ">
                            <%= f.text_field :name_cont, class: "form-control", placeholder: "Search by Location"  %>
                         </div>
                      </div>

                      <div class="col-md-3 col-md-offset-9  form-actions">
                         <%= f.submit "search", class: "btn btn-success pull-right" %>
                      </div>

                    <% end %>
                </div>
            </div>

            <div class="panel-body">
                <table class="table table-hover table-bordered">
                  <thead>
                    <tr>
                      <th>Date</th>
                      <th>Location</th>
                      <th>Time</th>
                      <th>Flight Summary</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @todo_lists.each do |todo_list| %>
                      <tr>
                        <td><%= todo_list.date %></td>
                        <td><%= todo_list.name %></td>
                         <td><%= todo_list.time %></td>
                         <td><%= todo_list.gnotes%><%= ' { Drone Status = ' %><%= todo_list.dronegood %><%= ' / ' %><%= todo_list.dronetotal %><%= ' } ' %></td>

                        <td><%= link_to 'View/Edit', edit_todo_list_path(todo_list) %></td>
                        <td><%= link_to 'Delete', todo_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
            </div>
        </div>
    </div>
</div>






